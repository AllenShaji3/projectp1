<%- include ('../partials/header') %>
<header>
  <h1>
    <%= diary.title %>
    <a href="/resources/<%= diary.id %>/edit">
      <i class=" fa fa-edit"></i>
    </a> 
  </h1>
  <br>
  <small>
    <%= (diary.updatedAt.toLocaleString("en-CA"))%>
  </small>
  <p><strong>By: <%= diary.user.fullname%></strong></p>
</header>
<hr>
<div class="content">
  <%- diary.content  %> 
</div>
<div class="status">
  <%= diary.status %> 
</div>

<%- include ('../partials/footer') %>

